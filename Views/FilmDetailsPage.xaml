<Page x:Class="KinopoiskWpfApp.Views.FilmDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Детали фильма">

    <ScrollViewer Margin="20" VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock Text="{Binding NameRu}" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" />

            <Image Source="{Binding PosterUrlPreview}" Height="400" Stretch="Uniform" Margin="0,0,0,20" />

            <TextBlock Text="Год выпуска:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Year}" Margin="0,0,0,10"/>

            <TextBlock Text="Жанры:" FontWeight="Bold"/>
            <TextBlock Text="{Binding GenresString}" Margin="0,0,0,10"/>

            <TextBlock Text="Страны:" FontWeight="Bold"/>
            <TextBlock Text="{Binding CountriesString}" Margin="0,0,0,20"/>

            <Button Content="Добавить в избранное"
                    Command="{Binding AddToFavoritesCommand}"
                    Margin="0,10,0,0" Width="200" />
        </StackPanel>
    </ScrollViewer>
</Page>