<Window x:Class="KinopoiskWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="КиноПоиск" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- для кнопок -->
            <RowDefinition Height="*"/>
            <!-- для фрейма -->
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10" Grid.Row="0" >
            <Button Content="Главная" Click="HomeButton_Click" Margin="5"/>
            <Button Content="Избранное" Click="FavoritesButton_Click" Margin="5"/>
        </StackPanel>

        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
